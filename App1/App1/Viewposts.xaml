<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App1.Viewposts">
    <ContentPage.Content>
        <StackLayout>
            <Label x:Name="Heading"   HorizontalOptions="Center" VerticalOptions="Center" FontSize="30"/>
            <Label x:Name="Post_Contents" FontSize="20"/>

            <Button x:Name="Upvote" Text="Upvote"  HorizontalOptions="Center" VerticalOptions="Center" Clicked="UpvoteClicked"/>
            
        
        </StackLayout>
    </ContentPage.Content>
</ContentPage>